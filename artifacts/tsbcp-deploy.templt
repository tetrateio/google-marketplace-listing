        name: tsb-operator
    spec:
      containers:
      - args:
        - data-plane
        - --deployment-name
        - tsb-operator-data-plane
        env:
        - name: POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: POD_NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: OPERATOR_NAME
          value: tsb-operator
        image: $tsbImageRepo:$tsbImageTag
        imagePullPolicy: IfNotPresent
